<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2"
        android:gravity="center"
        android:padding="5sp">
        <TableRow
            android:id="@+id/TableRow01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="2sp"
                android:text="Date"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="2sp"
                android:text="Sunrise"
                android:textColor="#ffd700"
                android:textSize="12sp"/>
            <TextView
                android:padding="2sp"
                android:gravity="center"
                android:textColor="#ff8400"
                android:textSize="12sp"
                android:text="Sunset"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="2sp"
                android:textSize="12sp"
                android:text="dd/mm/yyyy"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/dateTV_row"
                android:layout_width="wrap_content"/>
            <TextView
                android:padding="2sp"
                android:textSize="12sp"
                android:text="00:00"
                android:textColor="#ffd700"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/sunriseTimeTV_row"
                android:layout_width="wrap_content"/>
            <TextView
                android:padding="2sp"
                android:textSize="12sp"
                android:text="00:00"
                android:textColor="#ff8400"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/sunsetTimeTV_row"
                android:layout_width="wrap_content"/>
        </TableRow>
    </TableLayout>

</LinearLayout>