<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:stretchColumns="2">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/crypto_row_selection_symbol_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/row_selection_symbol" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/crypto_row_selection_name_tv"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/row_selection_name"
                android:textSize="15sp" />

            <ToggleButton
                android:id="@+id/crypto_row_selection_switch"
                android:layout_width="30sp"
                android:layout_height="30sp"
                style="@style/toggleButton"
                android:background="@drawable/ic_toggle_bg"/>
        </TableRow>
    </TableLayout>
</LinearLayout>